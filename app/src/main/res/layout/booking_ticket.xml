<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context=".BookingsFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="1dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/semi_white"
            android:fontFamily="@font/kollektif"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="5dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/tvFacilityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kollektif"
                    android:text="Facility Name"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/magenta3" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_location_dark"
                    android:drawableLeft="@drawable/ic_location_dark"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/kollektif"
                    android:text="Addr"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    app:drawableLeftCompat="@drawable/ic_location_dark"
                    app:drawableStartCompat="@drawable/ic_location_dark" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_calendar_dark"
                    android:drawableLeft="@drawable/ic_calendar_dark"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/kollektif"
                    android:text="Date"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    app:drawableLeftCompat="@drawable/ic_calendar_dark"
                    app:drawableStartCompat="@drawable/ic_calendar_dark" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_time_dark"
                    android:drawableLeft="@drawable/ic_time_dark"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/kollektif"
                    android:text="Time"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    app:drawableStartCompat="@drawable/ic_time_dark" />

                <TextView
                    android:id="@+id/tvPax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_pax_dark"
                    android:drawableLeft="@drawable/ic_pax_dark"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/kollektif"
                    android:text="Pax"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    app:drawableLeftCompat="@drawable/ic_pax_dark"
                    app:drawableStartCompat="@drawable/ic_pax_dark" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
